{
  "default_branch": "main",
  "default_interval": "10m",
  "jobs": [
    {
      "name": "fullstack",
      "repo_path": "..",
      "interval": "10m",
      "post_update": [
        {
          "cmd": ["docker-compose", "down"],
          "cwd": ".."
        },
        {
          "cmd": ["docker-compose", "up", "-d", "db"],
          "cwd": ".."
        },
        {
          "cmd": ["docker-compose", "run", "--rm", "backend", "alembic", "upgrade", "head"],
          "cwd": ".."
        },
        {
          "cmd": ["docker-compose", "up", "-d", "--build"],
          "cwd": ".."
        }
      ]
    }
  ]
}
